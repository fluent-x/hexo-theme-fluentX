[data-theme="dark"] 
  .snote 
    color #4c4948
    filter brightness(0.7)
div 
  &.tabs 
    div 
      &.snote 
        margin-top 0.5rem
        margin-bottom 0.5rem
  &.snote 
    position relative
    margin-top 0.5rem
    margin-bottom 0.5rem
    padding 0.6rem 16px 0.5rem 16px
    padding-left calc(16px + 16px)
    border-radius 4px
    background #f6f6f6
    border-left 4px solid #767676
    &::before 
      position absolute
      top calc(50% - 24px * 0.5)
      left 4px
      width 24px
      height 24px
      text-align center
      font-weight 600
      line-height 24px
      vertical-align middle
      font-family "Font Awesome 5 Free"
      color #767676
      content "\f054"
      content "\f054"
    &.quote 
      background #e8f4fd
      border-color #2196f3
      &::before 
        color #2196f3
        content "\f10d"
    &.info 
      background #e8f4fd
      border-color #2196f3
      &::before 
        color #2196f3
        content "\f129"
    &.warning 
      background #fff8e9
      border-color #ffbd2b
      &::before 
        color #ffbd2b
        content "\f12a"
    &.radiation 
      &::before 
        content "\f7b9"
    &.bug 
      &::before 
        content "\f188"
    &.idea 
      &::before 
        content "\f0eb"
    &.link 
      &::before 
        content "\f0c1"
    &.paperclip 
      &::before 
        content "\f0c6"
    &.todo 
      &::before 
        content "\f0ae"
    &.message 
      &::before 
        content "\f4ad"
    &.guide 
      &::before 
        content "\f277"
    &.download 
      &::before 
        content "\f019"
    &.up 
      &::before 
        content "\f102"
    &.undo 
      &::before 
        content "\f2ea"
    &.play 
      &::before 
        content "\f144"
    &.clear 
      background none
      border-color none
    &.light 
      background #f6f6f6
      border-color #aaa
      &::before 
        color #aaa
    &.gray 
      background #f6f6f6
      border-color #767676
      &::before 
        color #767676
    &.red 
      background #feefee
      border-color #fe5f58
      &::before 
        color #fe5f58
    &.yellow 
      background #fff8e9
      border-color #ffbd2b
      &::before 
        color #ffbd2b
    &.green 
      background #ebf9ed
      border-color #3dc550
      &::before 
        color #3dc550
    &.cyan 
      background #e8fafe
      border-color #1bcdfc
      &::before 
        color #1bcdfc
    &.blue 
      background #e8f4fd
      border-color #2196f3
      &::before 
        color #2196f3
.snote 
  position relative
  margin 0 0 1rem
  padding 15px
  border initial
  border-left 5px solid #eee
  background-color #f9f9f9
  border-radius 3px
  &:not(.no-icon) 
    padding-left 45px
  &:not(.no-icon)::before 
    position absolute
    top 13px
    left 15px
    font-size larger
    font-weight 600
    font-family "Font Awesome 5 Free"
  &.default 
    background-color #f7f7f7
    border-left-color #777
    &:not(.no-icon)::before 
      content "\f0a9"
      color #777
  &.primary 
    background-color #f5f0fa
    border-left-color #6f42c1
    &:not(.no-icon)::before 
      content "\f055"
      color #6f42c1
  &.info 
    background-color #eef7fa
    border-left-color #428bca
    &:not(.no-icon)::before 
      content "\f05a"
      color #428bca
  &.success 
    background-color #eff8f0
    border-left-color #5cb85c
    &:not(.no-icon)::before 
      content "\f058"
      color #5cb85c
  &.warning 
    background-color #fdf8ea
    border-left-color #f0ad4e
    &:not(.no-icon)::before 
      content "\f06a"
      color #f0ad4e
  &.danger 
    background-color #fcf1f2
    border-left-color #d9534f
    &:not(.no-icon)::before 
      content "\f056"
      color #d9534f
